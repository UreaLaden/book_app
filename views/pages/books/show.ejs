<%- include('../layout/header') %>
<body>
  <nav>AVL Books</nav>
  <div>
    <h1>This is the show page</h1>
    <% books.forEach(book=> { %>
      <div id="entry">
        <br>
        <img class='center' src="<%= book.image %>" alt="">
        <br>
        <h2>
          <%= book.title %>
        </h2>
        <br>
        <h2>
          <%= book.authors %>
        </h2>
        <br>
        <h4>
          <%= book.description %>
        </h4>
        <a href="pages/books/<%= book.id %>">View More Details</a>
      </div>
      <% }) %>
  </div>
</body>

<%- include ('../layout/footer') %>